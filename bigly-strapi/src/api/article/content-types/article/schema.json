{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "maxLength": 80
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "Big Beautiful Boycott",
      "enum": [
        "Big Beautiful Boycott",
        "Company"
      ]
    },
    "companies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::company.company",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "Company"
          ]
        }
      }
    },
    "SEO": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "content": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultMarkdown"
      }
    },
    "Social": {
      "type": "component",
      "component": "social.share-settings",
      "repeatable": false
    }
  }
}
