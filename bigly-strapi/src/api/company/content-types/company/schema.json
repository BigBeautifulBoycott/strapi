{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "Company"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "sector": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sector.sector"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ticker": {
      "type": "string"
    },
    "Evaluation": {
      "type": "component",
      "component": "shared.evaluation",
      "repeatable": false
    },
    "intro": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "boycott_target": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "about": {
      "type": "string",
      "minLength": 30,
      "maxLength": 65,
      "required": false
    },
    "parent_company": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::company.company"
    },
    "Reasoning": {
      "type": "component",
      "component": "pages.reasoning",
      "repeatable": true
    },
    "contact": {
      "type": "dynamiczone",
      "components": [
        "contact.website",
        "contact.social-profile",
        "contact.email",
        "contact.phone",
        "contact.addressss"
      ]
    },
    "ActionItems": {
      "type": "component",
      "component": "pages.how-to",
      "repeatable": true,
      "required": false
    }
  }
}
